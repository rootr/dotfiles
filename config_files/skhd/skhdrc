# -- Changing Window Focus --

# change window focus within space
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - l : yabai -m window --focus east

# change focus between external displays
# alt - d: yabai -m display --focus south
# alt - f: yabai -m display --focus north
# alt - s: yabai -m display --focus west
# alt - g: yabai -m display --focus east

# -- Modifying the Layout --

# rotate layout clockwise
# shift + alt - r : yabai -m space --rotate 270

# flip along y-axis (flips the whole screen layout)
cmd + ctrl + alt + shift - y : yabai -m space --mirror y-axis

# flip along x-axis
cmd + ctrl + alt + shift - x : yabai -m space --mirror x-axis

# toggle window float
cmd + ctrl + alt + shift - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# -- Modifying Window Size --

# maximize a window
cmd + ctrl + alt + shift - f : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
# shift + alt - e : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
cmd + ctrl + alt + shift - h : yabai -m window --swap west
cmd + ctrl + alt + shift - j : yabai -m window --swap south
cmd + ctrl + alt + shift - k : yabai -m window --swap north
cmd + ctrl + alt + shift - l : yabai -m window --swap east

# move window and split
ctrl + alt + shift - h : yabai -m window --warp west
ctrl + alt + shift - j : yabai -m window --warp south
ctrl + alt + shift - k : yabai -m window --warp north
ctrl + alt + shift - l : yabai -m window --warp east

# move window to display left and right
# shift + alt - s : yabai -m window --display west
# yabai -m display --focus west
# shift + alt - g : yabai -m window --display east
# yabai -m display --focus east

# move window to prev and next space
# shift + alt - p : yabai -m window --space prev
# shift + alt - n : yabai -m window --space next

# move window to space #
# shift + alt - 1 : yabai -m window --space 1
# shift + alt - 2 : yabai -m window --space 2
# shift + alt - 3 : yabai -m window --space 3
# shift + alt - 4 : yabai -m window --space 4
# shift + alt - 5 : yabai -m window --space 5
# shift + alt - 6 : yabai -m window --space 6
# shift + alt - 7 : yabai -m window --space 7

# -- Starting/Stopping/Restarting Yabai --

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service
